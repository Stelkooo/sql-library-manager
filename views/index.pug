extends layout

block content
  .container
    .bar  
      h1= title 
      p
        a(class="button" href="books/new") Create Book 
      include search
    .table
      table 
        thead 
          tr 
            th Title
            th Author
            th Genre
            th Year
        tbody
          each book in books
            tr 
              td
                a(href=`/books/${book.id}`) #{book.title}
              td= book.author
              td= book.genre
              td= book.year
    include pagination