.pagination
    .pagination-list
        - for (var i = 0; i < pagination.totalPages; i++)
            if (i === pagination.page - 1)
                if (searchQuery)
                    a(href=`/books?page=${i + 1}&q=${searchQuery}`).button.active= i + 1
                else
                    a(href=`/books?page=${i + 1}`).button.active= i + 1
            else
                if (searchQuery)
                    a(href=`/books?page=${i + 1}&q=${searchQuery}`).button= i + 1
                else
                    a(href=`/books?page=${i + 1}`).button= i + 1