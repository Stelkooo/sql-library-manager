extends layout

block content
    .container
        h1 Update Book
        form(method="post" action="/books/" + book.id).form
            include form-error 
            include form
            p
                input(type="submit" value="Update Book")
        form(method="post" action="/books/" + book.id + "/delete" onsubmit="return confirm('Do you really want to delete this book?');").form
            p
                a(class="button" href="/") Cancel
            p 
                input(type="submit" value="Delete Book")